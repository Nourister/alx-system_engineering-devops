#!/usr/bin/env bash
# This script installs and configures Nginx on an Ubuntu machine.
# Nginx is configured to listen on port 80 and returns a page with the string "Hello World!" at the root path.

# Update the package list
sudo apt-get update

# Install Nginx
sudo apt-get install -y nginx

# Create a default configuration file
sudo bash -c 'cat > /etc/nginx/sites-available/default <<EOF
server {
    listen 80;
    server_name localhost;

    location / {
        echo "Hello World!";
    }
}
EOF'

# Restart Nginx without using systemctl
sudo kill -s HUP $(pgrep -o nginx)

#echo "Nginx has been installed and configured. You can test it by using 'curl http://localhost/'."
